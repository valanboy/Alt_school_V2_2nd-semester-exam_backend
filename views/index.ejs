<div class="author">
  <h1 class="author__heading">Hi, Welcome to Gils! &#128515;</h1>
  <p class="author__body">feel free to Write about anything and everything! </p>
</div>
<img
  src="/img/myPic.jpg"
  alt="me smiling"
  class="hero-image"
  width="981"
  height="982"
/>

<section class="articles">
  <h2 class="article__heading">Latest Posts</h2>
  <ul class="article-ul">
   
<% data.forEach(post => { %>
  <li>
    <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__Date"><%= post.createdAt.toDateString() %></span>
    </a>
</li>
<% }) %>

  </ul>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View older Posts</a>
  <% } %>

</section>